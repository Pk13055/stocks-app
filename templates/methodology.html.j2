{% extends "base.html.j2" %}
{% block styles %}
<style>
    p.points {
        padding: 0.5rem !important;
        margin: 0.5rem !important;
    }
</style>
{% endblock styles %}
{% block scripts %}
<script>
    $(document).ready(function() {
        setTimeout(() => $("div.scale-transition").toggleClass("scale-out"), 200);
    });
</script>
{% endblock scripts %}
{% block content %}
<div class="row">
    <div class="col s12"><h2>Methodology</h2></div>
</div>
<div class="row">
    {% for point in points %}
        <div class="col s12 m6 l3">
        <div class="card-panel scale-transition scale-out">
            <p class="points flow-text">
                {{ point }}
            </p>
        </div>
    </div>
        {% endfor %}
</div>
{% endblock content %}